<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".ui.fragment.FragmentHome">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerSwipe">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:visibility="gone"
                        android:id="@+id/shimmerHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <include layout="@layout/shimmer_layout_home" />

                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <LinearLayout
                        android:id="@+id/lnHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/toolbarMain"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_20sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                tools:ignore="MissingConstraints">
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/primary_rect"
                                android:layout_marginTop="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:id="@+id/lnSlider"
                                android:elevation="@dimen/_1sdp"
                                android:padding="@dimen/_10sdp"
                                android:orientation="vertical"
                                android:layout_width="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:src="@drawable/logo_icon"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:gravity="right"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/robotolight"
                                            android:text="Saldo Saya"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_11sdp" />
                                        <TextView
                                            android:id="@+id/tvSaldo"
                                            android:gravity="right"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/robotomedium"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_15sdp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"/>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:id="@+id/btnTopup"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:background="@drawable/white_rect"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="+ Top Up"
                                        android:textSize="@dimen/_10sdp"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorPrimary" />
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:id="@+id/btnHistory"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="@dimen/_80sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/orange_rect"
                                        android:fontFamily="@font/robotomedium"
                                        android:text="History"
                                        android:textSize="@dimen/_10sdp"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white" />
                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:id="@+id/lnCaraPenggunaan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="MissingConstraints">

                                    <!-- Image View -->
                                    <ImageView
                                        android:background="@drawable/outline_grey"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/tutorial"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_50sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tutorial"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_9sdp"
                                        android:fontFamily="@font/robotomedium"
                                        android:layout_gravity="center_horizontal"/>

                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnSetting"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="MissingConstraints">

                                    <!-- Image View -->
                                    <ImageView
                                        android:background="@drawable/outline_grey"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/setting"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_50sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Ubah Suara"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_9sdp"
                                        android:fontFamily="@font/robotomedium"
                                        android:layout_gravity="center_horizontal"/>

                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lnPusatBantuan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="MissingConstraints">

                                    <!-- Image View -->
                                    <ImageView
                                        android:background="@drawable/outline_grey"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/cs"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_50sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pusat Bantuan"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_9sdp"
                                        android:fontFamily="@font/robotomedium"
                                        android:layout_gravity="center_horizontal"/>

                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginRight="@dimen/_10sdp"
                                android:id="@+id/lnBeliPaket"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="MissingConstraints">

                                    <!-- Image View -->
                                    <ImageView
                                        android:background="@drawable/outline_grey"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/paket"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_50sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Beli Paket"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_9sdp"
                                        android:fontFamily="@font/robotomedium"
                                        android:layout_gravity="center_horizontal"/>

                                </FrameLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:id="@+id/lnPesanAlarm"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    tools:ignore="MissingConstraints">

                                    <!-- Image View -->
                                    <ImageView
                                        android:background="@drawable/outline_grey"
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="@dimen/_50sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/order"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_50sdp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pesan Alarm"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_9sdp"
                                        android:fontFamily="@font/robotomedium"
                                        android:layout_gravity="center_horizontal"/>

                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:background="@drawable/white_rect"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_130sdp"
                            android:layout_height="@dimen/_180sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Berita &amp; Promo"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_14sdp"
                                        android:fontFamily="@font/robotomedium"/>
                                    <TextView
                                        android:visibility="gone"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Yuk lihat lebih detail !"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_10sdp"
                                        android:fontFamily="@font/robotolight"/>
                                </LinearLayout>
                                <Button
                                    android:visibility="gone"
                                    android:id="@+id/btnPromo"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="@dimen/_35sdp"
                                    android:text="lihat semua"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@drawable/text_selector_primary"
                                    android:background="@drawable/btn_outline_selector_primary"/>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/list_promo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:scrollbars="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <FrameLayout
                android:background="@drawable/white_rect_sheet"
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>