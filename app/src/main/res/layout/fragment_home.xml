<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".Fragment.FragmentHome">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerSwipe">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:visibility="gone"
                        android:id="@+id/shimmerHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <include layout="@layout/shimmer_layout_home" />

                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <LinearLayout
                        android:id="@+id/lnHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/splash2"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/splash3"/>
                            <LinearLayout
                                android:id="@+id/toolbarMain"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_220sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:orientation="vertical"
                                android:background="@drawable/splash1"
                                tools:ignore="MissingConstraints">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Selamat Datang"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/robotolight"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_15sdp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="REZA DARMAWAN"
                                    android:textSize="@dimen/_15sdp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/oswaldbold"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_2sdp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:background="@drawable/white_rect"
                                android:layout_marginTop="@dimen/_70sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:elevation="@dimen/_2sdp"
                                android:id="@+id/lnSlider"
                                android:padding="@dimen/_10sdp"
                                android:orientation="vertical"
                                android:layout_width="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Anda bertugas di :"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/robotolight"/>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Kode TPS"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/robotolight"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="#360139243"
                                        android:gravity="right"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/robotobold"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="#f2f2f2"
                                    android:layout_margin="@dimen/_5sdp"/>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Nama TPS"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/robotolight"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="TPS Lebak Bulus"
                                        android:gravity="right"
                                        android:textSize="@dimen/_9sdp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/robotobold"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <Button
                                        android:id="@+id/btnDetail"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/_35sdp"
                                        android:text="Detail"
                                        android:fontFamily="@font/robotomedium"
                                        android:textAllCaps="false"
                                        android:background="@drawable/primary_rect"
                                        android:textColor="#FFF"/>
                                    <Button
                                        android:id="@+id/btnPaslon"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="@dimen/_35sdp"
                                        android:text="Lihat Calon"
                                        android:fontFamily="@font/robotomedium"
                                        android:textAllCaps="false"
                                        android:background="@drawable/orange_rect"
                                        android:textColor="#FFF"/>
                                </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paslon &amp; Caleg"
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_produk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:scrollbars="horizontal"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Berita"
                            android:textColor="#000"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>
                        <LinearLayout
                            android:background="@drawable/white_rect"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_130sdp"
                            android:layout_height="@dimen/_160sdp"
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:layout_width="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Ada Berita Apa ?"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_14sdp"
                                        android:fontFamily="@font/robotomedium"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Yuk lihat lebih detail !"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_10sdp"
                                        android:fontFamily="@font/robotolight"/>
                                </LinearLayout>
                                <Button
                                    android:id="@+id/btnPromo"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="@dimen/_35sdp"
                                    android:text="lihat semua"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@drawable/text_selector_primary"
                                    android:background="@drawable/btn_outline_selector_primary"/>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/list_promo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:scrollbars="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>