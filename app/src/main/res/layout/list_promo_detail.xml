<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/white_rect"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivGambar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_3sdp" />
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/robotobold"
            android:layout_marginTop="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Promo ini akan berakhir pada :"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_11sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTanggalBerakhir"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="left"
                android:fontFamily="@font/robotomedium"
                android:textColor="#000"
                android:textSize="@dimen/_11sdp"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/btnKlaim"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Klaim"
            android:layout_gravity="right"
            android:textAllCaps="false"
            android:fontFamily="@font/robotomedium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@drawable/text_selector_primary"
            android:background="@drawable/btn_outline_selector_primary"/>
    </LinearLayout>
</LinearLayout>