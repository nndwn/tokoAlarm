<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnItem"
        android:background="@drawable/white_rect"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivGambar"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_right="@dimen/_5sdp"
            app:riv_corner_radius_top_left="@dimen/_5sdp"
            app:riv_corner_radius_bottom_left="@dimen/_5sdp"
            app:riv_corner_radius_bottom_right="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNamaPaslon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvJenisPaslon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_9sdp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/robotolight"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Suara Sah"
                    android:fontFamily="@font/robotolight"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/tvSuaraSah"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/robotolight"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Tidak Sah"
                    android:fontFamily="@font/robotolight"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/tvSuaraTidakSah"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/robotolight"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>