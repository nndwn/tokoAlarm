<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/scrollView"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_round_10"
            android:elevation="@dimen/_4sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            >
            <ImageView
                android:id= "@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_icon"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/text_pending"
                />
            <TextView
                android:id="@+id/koneksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/indicator"
                app:layout_constraintTop_toTopOf="@id/indicator"
                app:layout_constraintStart_toEndOf="@id/indicator"
                android:textSize="@dimen/_14sdp"
                android:text="@string/pending"
                android:textColor="@color/text_pending"
                android:fontFamily="@font/robotomedium"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seperator"
                app:layout_constraintTop_toBottomOf="@+id/koneksi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:id= "@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/seperator"
                >
                <TextView
                    android:id="@+id/namaAlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Alat"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/namaAlatResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Alatssssssssssssssssssssssddddddddssssss"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/container1"
                >
                <TextView
                    android:id="@+id/idAlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nomor_alat"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/idAlatResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Afffff"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/container2"
                >
                <TextView
                    android:id="@+id/statusPaket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_paket"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/statusPaketResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Afffff"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/container3"
                >
                <TextView
                    android:id="@+id/statusAlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_alat"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/statusAlatResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text= "@string/pending"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_pending"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/container4"
                >
                <TextView
                    android:id="@+id/mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/periode_mulai"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/mulaiResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Afffff"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/container6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/container5"
                >
                <TextView
                    android:id="@+id/akhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/berakhir_pada"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/akhirResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Afffff"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/container6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id ="@+id/checkAlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_round_10_blue"
                android:text="@string/periksa_alat"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/checkAlat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id ="@+id/tambahJadwal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_round_10_blue"
                android:text="@string/tambah_jadwal"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/tambahJadwal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id ="@+id/lamaBunyi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_round_10_blue"
                android:text="@string/atur_lama_bunyi"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/lamaBunyi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id ="@+id/bunyiBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_round_10_blue"
                android:text="@string/bunyikan"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="@dimen/_10sdp"
                />
            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintTop_toBottomOf="@+id/bunyiBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id ="@+id/mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_round_10_blue"
                android:text="@string/mode_manual"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/robotomedium"
                android:paddingVertical="@dimen/_10sdp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include layout="@layout/adapter_item_jadwal"
            android:id="@+id/layoutJadwal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/listSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/riwayatSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
