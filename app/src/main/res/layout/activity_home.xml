<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:behavior_hideable="true"
        android:padding="@dimen/_10sdp"
        tools:ignore="MissingPrefix">
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/primary_rect"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/rbHome"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbHome"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/radio_selector_primary"
                    android:button="@drawable/null_radio_button"
                    android:textColor="@drawable/radio_text_selector_primary"
                    android:text="Home"
                    android:drawableLeft="@drawable/ic_home"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:drawableTint="@drawable/radio_text_selector_primary"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/robotomedium"
                    android:layout_gravity="center"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:gravity="center">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rbPesanan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/radio_selector_primary"
                    android:button="@drawable/null_radio_button"
                    android:textColor="@drawable/radio_text_selector_primary"
                    android:text="History"
                    android:drawableLeft="@drawable/ic_ticket"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:drawableTint="@drawable/radio_text_selector_primary"
                    android:textSize="@dimen/_12sdp"
                    android:scaleY="0.75"
                    android:scaleX="0.75"
                    android:fontFamily="@font/robotomedium"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/rbAccount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/radio_selector_primary"
                    android:button="@drawable/null_radio_button"
                    android:textColor="@drawable/radio_text_selector_primary"
                    android:text="Account"
                    android:drawableLeft="@drawable/ic_account"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:drawableTint="@drawable/radio_text_selector_primary"
                    android:textSize="@dimen/_12sdp"
                    android:scaleY="0.75"
                    android:scaleX="0.75"
                    android:fontFamily="@font/robotomedium"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </RadioGroup>
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>