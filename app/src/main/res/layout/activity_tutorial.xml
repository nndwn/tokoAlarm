<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <RelativeLayout
                android:id="@+id/scannerLayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_400sdp">

                <View
                    android:id="@+id/scannerBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350sdp"
                    android:background="@drawable/scanning_background" />
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/backButton"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_white"
                            android:elevation="@dimen/_2sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_chevron_left"
                            app:tint="#000" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkFlash"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@drawable/circle_white"
                                android:button="@drawable/null_radio_button"
                                android:drawableTop="@drawable/ic_flash"
                                android:drawableTint="@drawable/flash_selector"
                                android:padding="@dimen/_8sdp" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/scannerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d2d6de"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/qrscan"
                            android:tint="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvHasilScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotomedium"
                            android:textStyle="normal"
                            android:textColor="#000"
                            android:text="Instruksi"/>
                        <TextView
                            android:id="@+id/tvHasilScan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/robotolight"
                            android:textStyle="normal"
                            android:textColor="#000"
                            android:text="Arahkan kamera tepat pada objek QR Code"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>