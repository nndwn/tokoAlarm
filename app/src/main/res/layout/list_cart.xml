<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnProduk"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/white_rect"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivGambar"
            android:layout_gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tvNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvHarga"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#FF5722"
                    android:textSize="@dimen/_12sdp"
                    android:text="Rp. -"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <LinearLayout
                    android:id="@+id/lnKuantitas"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnMin"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:text="-"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textColor="@drawable/text_selector_primary"
                        android:background="@drawable/btn_outline_selector_primary"/>
                    <TextView
                        android:id="@+id/tvKuantitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="#000"
                        android:fontFamily="@font/robotomedium"/>
                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:text="+"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:textColor="@drawable/text_selector_primary"
                        android:background="@drawable/btn_outline_selector_primary"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>