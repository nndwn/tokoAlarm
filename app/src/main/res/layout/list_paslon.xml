<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnPaslon"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/white_rect"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivGambar"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_right="@dimen/_5sdp"
            app:riv_corner_radius_top_left="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tvNamaPaslon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvJenisPaslon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="..."
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_9sdp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#f2f2f2"
                android:layout_margin="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:text="Sah"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/tvSuaraSah"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#4CAF50"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:paddingRight="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp"
                    android:text="Tidak"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:id="@+id/tvSuaraTidakSah"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#F44336"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:gravity="right"
                    android:paddingRight="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>