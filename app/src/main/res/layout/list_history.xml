<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnItem"
        android:background="@drawable/white_rect"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvInvoice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/robotobold"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total item"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvTotalItem"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total Bayar"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvTotalBayar"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/robotolight"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@drawable/txt_alert_selector"
                android:background="@drawable/bg_alert_selector"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/btnAction"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Detail"
            android:layout_gravity="right"
            android:textAllCaps="false"
            android:fontFamily="@font/robotomedium"
            android:textSize="@dimen/_10sdp"
            android:textColor="@drawable/text_selector_primary"
            android:background="@drawable/btn_outline_selector_primary"/>
    </LinearLayout>
</LinearLayout>