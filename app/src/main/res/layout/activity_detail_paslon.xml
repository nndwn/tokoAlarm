<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailPaslon">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerSwipe">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivGambar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_220sdp"
                        android:scaleType="centerCrop"
                        tools:ignore="MissingConstraints" />
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        tools:ignore="MissingConstraints">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/backButton"
                                android:layout_gravity="left"
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:tint="@color/white"
                                android:padding="@dimen/_10sdp"
                                android:elevation="@dimen/_2sdp"
                                android:background="@drawable/primary_rect"
                                android:src="@drawable/ic_arrow_back"/>

                        </RelativeLayout>
                    </androidx.appcompat.widget.Toolbar>

                    <LinearLayout
                        android:layout_below="@+id/ivGambar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvNamaPaslon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>
                        <TextView
                            android:id="@+id/tvJenisPaslon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:text=""
                            android:fontFamily="@font/robotolight"
                            android:textColor="#000"
                            android:textSize="@dimen/_11sdp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:padding="@dimen/_10sdp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_15sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Suara sah"
                                        android:fontFamily="@font/robotolight"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_9sdp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:id="@+id/tvSuaraSah"
                                        android:gravity="left"
                                        android:fontFamily="@font/robotomedium"
                                        android:textColor="#4CAF50"
                                        android:textSize="@dimen/_15sdp"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:background="#f2f2f2"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tidak sah"
                                        android:fontFamily="@font/robotolight"
                                        android:textColor="#000"
                                        android:textSize="@dimen/_9sdp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:id="@+id/tvSuaraTidakSah"
                                        android:gravity="left"
                                        android:fontFamily="@font/robotomedium"
                                        android:textColor="#F44336"
                                        android:textSize="@dimen/_15sdp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/primary_rect"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="+ Input Suara"
                                    android:id="@+id/tvTerjual"
                                    android:gravity="center"
                                    android:fontFamily="@font/robotomedium"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11sdp"/>
                            </LinearLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:background="#f2f2f2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Visi"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>
                        <TextView
                            android:id="@+id/tvVisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:fontFamily="@font/robotolight"
                            android:textColor="#000"
                            android:background="@null"
                            android:textSize="@dimen/_11sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:background="#f2f2f2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Misi"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/robotobold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"/>
                        <TextView
                            android:id="@+id/tvMisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:fontFamily="@font/robotolight"
                            android:textColor="#000"
                            android:background="@null"
                            android:textSize="@dimen/_11sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:background="#f2f2f2"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/robotobold"
                            android:text="Monitoring Suara"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmerPieChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:gravity="center"
                                android:background="@color/shimmer_color"/>

                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lnPieChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/white_rect_outline_primary">
                            <WebView
                                android:id="@+id/piechart"
                                android:layout_margin="0dp"
                                android:padding="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmerColumnChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:gravity="center"
                                android:background="@color/shimmer_color"/>

                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lnColumnChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/white_rect_outline_primary">
                            <WebView
                                android:id="@+id/columnchart"
                                android:layout_margin="0dp"
                                android:padding="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmerTable"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:gravity="center"
                                android:background="@color/shimmer_color"/>

                        </com.facebook.shimmer.ShimmerFrameLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/lnTable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rect_outline_primary"
                            android:orientation="vertical"
                            android:padding="1dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_150sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp">
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:background="@color/colorPrimary">
                                        <TextView
                                            android:layout_width="@dimen/_140sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Wilayah"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/robotobold"/>
                                        <TextView
                                            android:layout_marginHorizontal="@dimen/_5sdp"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Suara Sah"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/robotobold"/>
                                        <TextView
                                            android:layout_marginHorizontal="@dimen/_5sdp"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Tidak Sah"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/robotobold"/>
                                    </LinearLayout>
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/list_monitoring"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:orientation="horizontal"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:background="@color/light_gray">
                                        <TextView
                                            android:layout_width="@dimen/_140sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Total"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/robotobold"/>
                                        <TextView
                                            android:layout_marginHorizontal="@dimen/_5sdp"
                                            android:id="@+id/tvTotalSah"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/robotobold"/>
                                        <TextView
                                            android:layout_marginHorizontal="@dimen/_5sdp"
                                            android:id="@+id/tvTotalTidakSah"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/robotobold"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>


        <FrameLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:behavior_hideable="true"
            android:padding="@dimen/_10sdp"
            android:background="#FFF"
            tools:ignore="MissingPrefix">
        </FrameLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>