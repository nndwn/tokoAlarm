<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".Produk">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerSwipe">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_gravity="left"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:tint="@color/white"
                        android:padding="@dimen/_10sdp"
                        android:elevation="@dimen/_2sdp"
                        android:background="@drawable/primary_rect"
                        android:src="@drawable/ic_arrow_back"/>
                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/edSearch"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/white_rect"
                        app:iconifiedByDefault="false"
                        android:theme="@style/AppSearchView"
                        app:queryHint="Cari nama calon ...">

                    </androidx.appcompat.widget.SearchView>
                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="@dimen/_37sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:tint="@color/black"
                        android:padding="@dimen/_10sdp"
                        android:elevation="@dimen/_1sdp"
                        android:background="@drawable/white_rect"
                        android:src="@drawable/ic_sort"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerProduk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/shimmer_produk" />
                        <include layout="@layout/shimmer_produk" />
                        <include layout="@layout/shimmer_produk" />
                        <include layout="@layout/shimmer_produk" />
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <LinearLayout
                    android:id="@+id/lnData"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_produk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lnNoData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:src="@drawable/ilus_data_empty"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Belum Tersedia"
                        android:textColor="#000"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/robotobold"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maaf produk yg anda cara tidak tersedia."
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/robotolight"
                        android:layout_marginTop="@dimen/_2sdp"/>
                </LinearLayout>

                <com.github.ybq.android.spinkit.SpinKitView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivloadMore"
                    style="@style/SpinKitView.DoubleBounce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/_20sdp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>