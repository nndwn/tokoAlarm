<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_5sdp"
        android:background="@drawable/grey_rect"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Input Suara"
        android:fontFamily="@font/robotobold"
        android:textSize="@dimen/_12sdp"
        android:textColor="#1a1a1a" />
    <LinearLayout
        android:id="@+id/viewPager"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/outline_grey_stright"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:tint="#4CAF50"
                android:src="@drawable/ic_check"/>
            <EditText
                android:id="@+id/edSuaraSah"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Suara Sah"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="@dimen/_12sdp"
                android:background="@null"
                android:fontFamily="@font/robotolight"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CECECE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/grey_rect"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:tint="#F44336"
                android:src="@drawable/ic_close"/>
            <EditText
                android:id="@+id/edSuaraTidakSah"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Suara Tidak Sah"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="@dimen/_12sdp"
                android:background="@null"
                android:fontFamily="@font/robotolight"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/btnSimpan"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="Simpan"
            android:fontFamily="@font/robotomedium"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/primary_rect"
            android:textColor="#FFF"/>
    </LinearLayout>
</LinearLayout>