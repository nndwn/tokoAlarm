
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="base" parent="Theme.Design.NoActionBar">
        <item name="colorSurface">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">
            @color/primary_color
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @color/primary_color
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">
            @drawable/logoputih
        </item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="postSplashScreenTheme">@style/base</item>
    </style>


    <style name="BottomNavigationViewLabelStyle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:paddingTop">@dimen/_100sdp</item>
    </style>
</resources>